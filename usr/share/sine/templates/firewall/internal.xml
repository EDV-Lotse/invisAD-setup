<?xml version="1.0" encoding="utf-8"?>
<zone>
  <short>Internal</short>
  <description>For use on internal networks. You mostly trust the other computers on the networks to not harm your computer. Only selected incoming connections are accepted.</description>
  <interface name="intern"/>
  <interface name="vpn"/>
  <interface name="wlan0"/>
  <!-- Testumgebung: ssh über Standard-Port 22 -->
  <service name="ssh"/>
  <!-- Produktiv: ssh über Zufallsport xxxxx -->
  <port port="sshport" protocol="tcp"/>

  <!-- Webserver -->
  <!-- http (80): Für Letsencrypt oder Portal intern (deprecated)-->
  <service name="http"/>
  <!-- https (443): Für den Rest --> 
  <service name="https"/>
  <!-- In bestimmten Konfigurationen für das Portal -->
  <port port="httpsport" protocol="tcp"/>
  <!-- In bestimmten Konfigurationen für OwnCloud -->
  <port port="ocport" protocol="tcp"/>

  <!-- Mail, Groupware -->
  <!-- smtp (25): Für STARTTLS -->
  <service name="smtp"/>
  <service name="smtp-submission"/>
  <!-- imap (25): Für STARTTLS -->
  <service name="imap"/>
  <service name="imaps"/>
  <!-- Kopano spezifische Ports 237, 8443 -->
  <service name="kopano"/>

  <!-- CUPS -->
  <service name="ipp"/>

  <!-- Alles was mit dem AD und Infrastruktur zu tun hat -->
  <service name="dhcp"/>
  <service name="dns"/>
  <service name="ntp"/>
  <service name="kerberos"/>
  <service name="kpasswd"/>
  <service name="samba-ad-dc"/>
  <!-- ldap (389): Für STARTTLS -->
  <service name="ldap"/>
  <service name="ldaps"/>

  <!-- Sonstige Infrastruktur -->
	<service name="nfs"/>
  <service name="syslog"/>
  <service name="mdns"/>
  <!-- MDNS zusätzlich auf TCP -->
  <port port="5353" protocol="tcp"/>
  <service name="ntop"/>
</zone>
