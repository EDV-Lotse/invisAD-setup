templatepath="/srv/shares/media/ordnervorlagen"

setrights() {
	chmod g+rwxs,o-rwx $1
	chgrp $2 $1
	setfacl -d -m group:$2:rwx
}

if (( $# == 1 )); then
	GRP=$1
	DIR=/srv/shares/gruppen/$GRP
	mkdir $DIR
	setrights $DIR $GRP
elif (( $# == 2 )); then
	GRP=$1
	TEMPLATE=$2
	DIR=/srv/shares/gruppen/$GRP
	cp -r $templatedir/$TEMPLATE $DIR
	setrights $DIR $GRP
else
	echo "Usage: $0 {groupname}";
fi
