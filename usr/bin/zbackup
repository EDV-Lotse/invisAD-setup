# Konfigurationsdaten
conffile="/etc/invis/invis.conf"
#passfile="/etc/invis/invis-pws.conf"

if [[ ! `which zarafa-backup-plus` ]]; then
    echo "Installieren Sie bitte zarafa-backup-plus aus den unterstützten Zarafa-Paketen."
    exit
fi

# Funktionen
# Werte aus Konfigurationsdatendatei extrahieren
# $1 = Konfigurationsdatei, $2 = Parameter, $3 Wert (Feld)
getconfdata() {
    cat $1 |grep "$2" | cut -d ":" -f $3
}

# Konfigurationsparameter tauschen
changevalues() {
    # Arg1 = Pfad, Arg2 = Datei, Arg3 = sed String
    cat $1/$2|sed "s%$3%g" > $1/$2.new
    mv $1/$2.new $1/$2
}

# Pfade aus Konfiguration einlesen
dasidir=`getconfdata $conffile "DasiDir" "2"`
zbutarget=`getconfdata $conffile "zBuTarget" "2"`
dasipath="$dasidir/$zbutarget"

# Sicherungsverzeichnis anlegen
if [[ ! -d $dasipath ]]; then
    mkdir -p $dasipath
fi

# Datensicherung der Stores durchführen
zarafa-backup-plus -O $dasipath -w 4 > /var/log/zbu.log 2>&1
