# Konfigurationsdaten
conffile="/etc/invis/invis.conf"

# Funktionen
# Werte aus Konfigurationsdatendatei extrahieren
# $1 = Konfigurationsdatei, $2 = Parameter, $3 Wert (Feld)
getconfdata() {
    cat $1 |grep "$2" | cut -d ":" -f $3
}

# Konfigurationsparameter tauschen
changevalues() {
    # Arg1 = Pfad, Arg2 = Datei, Arg3 = sed String
    cat $1/$2|sed "s%$3%g" > $1/$2.new
    mv $1/$2.new $1/$2
}

## Sicherungsverzeichnis
dasibase=`getconfdata $conffile "DasiDir" "2"`
backupdir="$dasibase/vollsicherungen/ad"
datum=$(date +%Y%m%d)

if [[ ! -d $backupdir ]]; then
    mkdir -p $backupdir
fi

tar -czf $backupdir/Samba_$datum.tar.gz --exclude=profiles --exclude=msg.* --exclude=ldapi --exclude=pipe --exclude=socket --exclude=ldapi -C / var/lib/samba
